<div class="item item-gear flexrow" data-item-id="{{id}}">

  <div class="item-name flexrow">
    <img class="item-roll" src="{{img}}" title="{{name}}" width="24" height="24"/>
    <a class="item-roll">{{detailedName}}</a>
  </div>
  {{#with data}}
  {{!-- <div class="item-detail item-quantity">{{data.qty}}</div> --}}
  <div class="item-detail item-weight">{{data.encumbrance}}</div>

  <div class="item-controls">
    {{> "modules/t2k4e-loot-sheet-npc/templates/partials/slots/slot-buttons.hbs"}}
  </div>
  {{/with}}

</div>