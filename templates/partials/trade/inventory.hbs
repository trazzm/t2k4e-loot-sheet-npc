<ul class="items-list inventory-list">
    {{#each inventoryData as |section sid|}}
        {{#each section.items as |item iid|}}
            <li class="item"
                {{#ifeq ../../lootsheettype "Merchant"}}
                    data-action="stageItem" data-get-all="false"
                {{/ifeq}}
                {{#ifeq ../../lootsheettype "Loot"}}
                    data-action="lootItem" data-get-all="false"
                {{/ifeq}}
                data-uuid="{{item.uuid}}"
                data-id="{{item._id}}"
                data-quantity="{{item.data.quantity}}"
                {{#ifeq ../../mode "npc" }}
                    data-price="{{lootsheetprice item.data.price ../../priceModifier.sell}}"
                    data-price-label="{{approximateNumber (lootsheetprice item.data.price ../../priceModifier.sell false) 2}}"
                {{else}}
                    data-price="{{lootsheetprice item.data.price ../../priceModifier.buy}}"
                    data-price-label="{{approximateNumber (lootsheetprice item.data.price ../../priceModifier.buy false) 2}}"
                {{/ifeq}}
                data-weight="{{lootsheetweight item.data.weight}}{{lootsheetstackweight item.data.weight item.data.quantity}}"
                data-weight-hanging="{{lootsheetweight item.data.weight}}{{lootsheetstackweight item.data.weight item.data.quantity}}"
                data-name="{{item.name}}"
                draggable="false"
                style="background-image: url({{item.img}})">
            </li>
        {{/each}}
    {{/each}}
</ul>