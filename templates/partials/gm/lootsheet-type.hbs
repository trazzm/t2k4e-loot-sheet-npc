<div class="flexrow" style="align-items: center;">
    <h3 class="gm-header">
        <i class="fas fa-id-card"></i> {{localize "lsnpc.infoboxes.lootsheettype.title"}}
        <aside class="infobox-wrapper">
            <i class="fas fa-info-circle help" data-theme="lsn-help"></i>
            <div class="sheet-infobox hidden">
                {{{localize "lsnpc.infoboxes.lootsheettype.content"}}}
        </aside>
    </h3>
    <select class="sheet-type{{#if this.token}} lsnpc-action-link{{/if}}" name="flags.lootsheetnpct2k4e.lootsheettype"
        data-event-type="change" data-action="sheetUpdate">
        {{#select actor.data.flags.lootsheetnpct2k4e.lootsheettype}}
