            <option value="Merchant">{{localize "lsnpc.sheettypes.merchant"}}</option>
            <!--option value="Object" title="e.g. a chest, a box, any object that can contain something">{{localize "lsnpc.sheettypes.object"}}</option>
            <option value="Shop">{{localize "lsnpc.sheettypes.shop"}}</option>
            <option value="Account">{{localize "lsnpc.sheettypes.account"}}</option-->
        {{/select}}
    </select>
</div>